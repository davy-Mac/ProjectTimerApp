<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.davidmaceda.projecttimerapp.MainActivity">

    <TextView
        android:id="@+id/chronometerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer App"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/timerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Please Enter Activity ID"
        android:textSize="20sp"
        />

    <Chronometer
        android:id="@+id/mChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:visibility="visible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startChronometer"
        android:text="Start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pauseChronometer"
        android:text="Pause" />

    <Button
    android:id="@+id/stop_save_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="stopSaveChronometer"
    android:text="Stop/Save" />

    <Button
        android:id="@+id/view_records_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewRecords"
        android:text="View Records"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="resetChronometer"
        android:text="Reset" />

</LinearLayout>
